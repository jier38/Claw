@page
@model RoomModel
@{
    ViewData["Title"] = "Room";
}
<body onunload="HandleOnClose()">
<h1>@ViewData["Title"]</h1>

<div>
    <div>
        <video name="videoElement1" class="centeredVideo" autoplay></video>
    </div>
    <div>
        <button type="button" id="btnStart">Start</button>
        <button type="button" id="btnUp">Up</button>
        <button type="button" id="btnDown">Down</button>
        <button type="button" id="btnLeft">Left</button>
        <button type="button" id="btnRight">Right</button>
        <button type="button" id="btnDrop">Drop</button>
    </div>
</div>

<script src="/js/flv.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.slim.min.js"
        integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI="
        crossorigin="anonymous"></script>
<script>
    $("#btnStart").click(function() {
        $.get("Room?handler=Start").done(function(res) {
              
        });
    });
    
    function HandleOnClose() {
        $.get("Room?handler=Close").done(function(res) {
              
        });
    }
    
    if (flvjs.isSupported()) {
        var element = document.getElementsByName('videoElement1')[0];
        var flvPlayer = flvjs.createPlayer({
            type: 'flv',
            url: 'http://3.20.235.8:8080/live/livestream1.flv'
        });
        flvPlayer.attachMediaElement(element);
        flvPlayer.load();
        flvPlayer.play();
    }

</script>
</body>